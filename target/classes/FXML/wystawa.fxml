            <TableColumn fx:id="Tytul" prefWidth="75.0" text="Tytul obrazu" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                  <MenuItem fx:id="wystawa_menuitem" mnemonicParsing="false" onAction="#add" text="Dodaj"/>
                <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#delete" text="UsuÅ„" />
              </items>
            </ContextMenu>
         </contextMenu>
